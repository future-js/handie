{
  "extends": "../../configs/tsconfig-base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@handie/runtime-core": ["../../packages/runtime-core/src/index.ts"],
      "@handie/runtime-core/dist/*": ["../../packages/runtime-core/src/*"],
      "handie-vue": ["../../packages/handie-vue/src/index.ts"],
      "handie-vue/dist/*": ["../../packages/handie-vue/src/*"],
      "@handie/bulbasaur": ["../../packages/bulbasaur/src/index.ts"],
      "@handie/bulbasaur/dist/*": ["../../packages/bulbasaur/src/*"],
      "@_/*": ["../common/*"],
      "@/*": ["src/shared/*"]
    }
  },
  "include": [
    "../../typings",
    "../../packages/runtime-core/src",
    "../../packages/handie-vue/src",
    "../../packages/bulbasaur/src",
    "../common",
    "src"
  ]
}
