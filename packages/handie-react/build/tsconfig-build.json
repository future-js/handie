{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2015",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "importHelpers": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {}
  },
  "include": ["../../demos/react/typings.d.ts","src"],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "docs",
    "tests"
  ]
}
